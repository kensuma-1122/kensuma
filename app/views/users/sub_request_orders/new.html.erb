<% provide(:title, "発注依頼登録") %>
<% provide(:btn_text, "登録") %>

<div class="card">
  <div class="card-body">
    <%= form_with model: @sub_request_order, url: users_request_order_sub_request_orders_path(@request_order), method: :post, local: true do |f| %>
      <%= f.label :business_id %>
      <%= f.collection_select :business_id, @businesses, :id, :name, { prompt: true }, { required: true, class: "form-control" } %>
      <br>
      <%= f.hidden_field :parent_id, value: @request_order.id %>
      <%= f.submit yield(:btn_text), class: "btn btn-md btn-block btn-primary" %>
      <%= link_to "一覧画面へ", users_orders_path, class: "btn btn-md btn-block btn-default" %>
    <% end %>
  </div>
</div>