<% provide(:title, "書類編集 #{@document.cover_document.business_name}") %>
<% provide(:btn_text, "更新") %>

<div class="card">
  <%= form_with model: @document, url: users_document_path, method: :patch, local: true do |f| %>
    <div class="card-body">
      <%= render partial: "form", locals: { f: f, document: @document} %>
    </div>
    <div class="card-footer">
      <%= f.submit yield(:btn_text), class: "btn btn-md btn-block btn-success" %>
    </div>
  <% end %>
</div>
