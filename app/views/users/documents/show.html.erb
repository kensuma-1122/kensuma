<% provide(:title, "#{@document.document_type_i18n}") %>

<%= render '/users/documents/shares/show_link', document: @document %>

<% case @document.document_type %>
<% when 'cover_document' %>
  <%= render 'users/documents/cover_documents/show' %> <!-- 表紙 -->
<% when 'table_of_contents_document' %>
  <%= render 'users/documents/table_of_contents_documents/show' %> <!-- 目次 -->
<% when 'doc_2nd' %>
  <%= render 'users/documents/doc_2nd/show' %> <!-- 施工体制台帳作成建設工事の通知 -->
<% when 'doc_5th' %>
  <%= render 'users/documents/doc_5th/show' %> <!-- 作業員名簿 -->
<% when 'doc_8th' %>
  <%= render 'users/documents/doc_8th/show' %> <!-- 工事用・通勤用車両届 -->
<% end %>
