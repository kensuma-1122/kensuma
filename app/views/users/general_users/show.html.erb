<% provide(:title, "ユーザー詳細") %>

<div class="card">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
      <tbody>
        <tr>
          <th><%= User.human_attribute_name(:name) %></th>
          <td><%= @general_user.name %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name(:email) %></th>
          <td><%= @general_user.email %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name(:age) %></th>
          <td><%= @general_user.age %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name(:gender) %></th>
          <td><%= @general_user.gender_i18n %></td>
        </tr>
      </tbody>
    </table>
      
  </div>
  <div class="card-footer">
    <%= link_to "編集", '#', class: "btn btn-md btn-block btn-success" %>
    <%= link_to "戻る", '#', class: "btn btn-md btn-block btn-default" %>
  </div>
</div>
