<div class="col-sm-6">
  <h1>General Form</h1>
</div>

<div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title">Quick Example</h3>
  </div>

  <!-- /.card-header -->
  <!-- form start -->
  <%= form_with model: @business, url: users_business_path, method: :post do |f| %>
    <div class="card-body">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :name_kana %>
        <%= f.text_field :name_kana, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :branch_name %>
        <%= f.text_field :branch_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :representative_name %>
        <%= f.text_field :representative_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :post_code %>
        <%= f.text_field :post_code, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :phone_number %>
        <%= f.telephone_field :phone_number, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :carrier_up_id %>
        <%= f.text_field :carrier_up_id, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :stamp_images %>
        <%= f.text_field :stamp_images, class: "form-control", multiple: true %>
      </div>
      <div class="form-group">
        <%= f.label :business_type %>
        <%= f.select :business_type, Business.business_types.keys.map { |k| [I18n.t("enums.business.business_type.#{k}"), k]}, {include_blank: true}, {class: "form-control"} %>
      </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
