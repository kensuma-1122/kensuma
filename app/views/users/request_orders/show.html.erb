                  <td><%= @request_order.supervisor_apply %></td>
                </tr>
                <tr>
                  <th><%= RequestOrder.human_attribute_name(:professional_engineer_name) %></th> <!-- 専門技術者(氏名) -->
                  <td><%= @request_order.professional_engineer_name %></td>
                </tr>
                <tr>
