<% provide(:title, "作業者登録") %>
<% provide(:btn_text, "登録") %>

<div class="card">
  <%= form_with model: @business, url: users_business_path, method: :post, local: true do |f| %>
    <div class="card-body">
      <%= render partial: "form", locals: { f: f, business: @business } %>
    </div>
    <div class="card-footer">
      <%= f.submit yield(:btn_text), class: "btn btn-md btn-block btn-primary" %>
    </div>
  <% end %>
</div>
