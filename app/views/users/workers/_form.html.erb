<%= render 'shared/error_massages', object: f.object %>

<%= f.label :name %>
<%= f.text_field :name, class: "form-control", placeholder: "名前を入力してください" %>
<br>
<%= f.label :name_kana %>
<%= f.text_field :name_kana, class: "form-control", placeholder: "名前(カナ)を入力してください" %>
<br>
<%= f.label :country %>
<%= f.text_field :country, class: "form-control", placeholder: "国籍を入力してください" %>
<br>
<%= f.label :my_address %>
<%= f.text_field :my_address, class: "form-control", placeholder: "住所を入力してください" %>
<br>
<%= f.label :my_phone_number %>
<%= f.number_field :my_phone_number, class: "form-control", placeholder: "家族番号を入力してください" %>
<br>
<%= f.label :family_address %>
<%= f.text_field :family_address, class: "form-control", placeholder: "家族住所を入力してください" %>
<br>
<%= f.label :family_phone_number %>
<%= f.number_field :family_phone_number, class: "form-control", placeholder: "家族電話番号を入力してください" %>
<br>
<%= f.label :birth_day_on %>
<%= f.date_field :birth_day_on, class: "form-control" %>
<br>
<%= f.label :abo_blood_type %>
<%= f.select :abo_blood_type, Worker.abo_blood_types.keys.to_a, {}, class: "form-control" %>
<br>
<%= f.label :rh_blood_type %>
<%= f.select :rh_blood_type, Worker.rh_blood_types.keys.to_a, {}, class: "form-control" %>
<br>
<%= f.label :job_type %>
<%= f.select :job_type, Worker.job_types.keys.to_a, {}, class: "form-control" %>
<br>
<%= f.label :hiring_on %>
<%= f.date_field :hiring_on, class: "form-control" %>
<br>
<%= f.label :experience_term_before_hiring %>
<%= f.text_field :experience_term_before_hiring, class: "form-control", placeholder: "雇入前経験年数を入力してください" %>
<br>
<%= f.label :blank_term %>
<%= f.text_field :blank_term, class: "form-control" %>
<br>
<%= f.label :carrier_up_id %>
<%= f.text_field :carrier_up_id, class: "form-control" %>
<br>
<% if worker.images.present? %>
  <% worker.images.each_with_index do |image, index| %>
    <%= image_tag(image.url) %>
    <%= link_to "削除", users_worker_update_images_path(worker, index: index), method: :patch, data: { confirm: "本当に削除してもよろしいですか？" } %>
  <% end %>
  <br>
<% end %>
<%= f.label :images %>
<%= f.file_field :images, multiple: true, class: "form-control" %>

<%= f.hidden_field :business_id, value: current_user.business.id %>
