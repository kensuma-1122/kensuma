<% provide(:title, "機械情報登録") %>
<% provide(:btn_text, "登録") %>

<div class="card">
  <div class="card-body">
    <%= form_with model: @machine, url: users_machines_path, method: :post, local: true do |f| %>
      <%= render partial: "form", locals: { f: f, machine: @machine } %>
      <%= f.submit yield(:btn_text), class: "btn btn-primary btn-block btn-md" %>
      <%= link_to "一覧画面へ", users_machines_path, class: "btn btn-default btn-block btn-md" %>
    <% end %>
  </div>
</div>
