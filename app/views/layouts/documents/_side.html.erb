<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <!-- Brand Logo -->
  <%= link_to users_dash_boards_path, class:"brand-link", style: "display: flex" do %>
    <%= image_tag "kensuma/03", class:"brand-image elevation-3", style: "opacity: .8" %>
    <%# <span class="brand-text font-weight-light">建スマ</span> %>
  <% end %>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <%#= image_tag "user2-160x160.jpg", class:"img-circle elevation-2" %>
      </div>
      <div class="info">
        <%= link_to current_user.name, users_profile_path, class:"d-block" %>
        <%= link_to "ログアウト", destroy_user_session_path, class:"d-block mt-3", method: :delete %>
      </div>
    </div>

    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <%#= image_tag "user2-160x160.jpg", class:"img-circle elevation-2" %>
      </div>
      <div class="info">
        <% @documents.each do |document| %>
          <%= link_to document.cover_document.business_name, users_document_path(document), class:"d-block mt-3" %>
        <% end %>
      </div>
    </div>    

    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <li class="nav-item">
          <%= link_to users_news_index_path, class:"nav-link" do %>
            <%# <i class="nav-icon fas fa-th"></i> %>
            <i class="nav-icon fas fa-newspaper"></i>
            <p>
              お知らせ
              <%# <span class="right badge badge-danger">New</span> %>
            </p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to 'https://forms.gle/HbWqbQpd33ZdQAoa7', class:"nav-link", target: :_blank, rel: "noopener noreferrer" do %>
            <i class="nav-icon fas fa-question"></i>
            <p>お問い合わせ</p>
          <% end %>
        </li>
      </ul>
    </nav>
    <!-- /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
</aside>
